{
  "server": {
    "host": "localhost",
    "port": 8010
  },
  "service": {
    "mjpg_streamer": {
      "url": "http://localhost:36700/?action=stream"
    },
    "spacebro": {
      "host": "spacebro.space",
      "port": 3333,
      "channelName": "media-stream",
      "client": {
        "name": "pyying",
        "description": "An app to take pictures with reflex cameras",
        "in": {
          "shoot": {
            "eventName": "shoot",
            "description": "Take a picture",
            "type": "all"
          },
          "getConfig": {
            "eventName": "getConfig",
            "description": "Ask for camera config (aperture, shutter speed, serial number, ...)",
            "type": "all"
          },
          "setConfig": {
            "eventName": "setConfig",
            "description": "Set camera config (aperture, shutter speed, serial number, ...)",
            "type": "all"
          }
        },
        "out": {
          "outMedia": {
            "eventName": "outMedia",
            "description": "picture taken",
            "type": "all"
          },
          "config": {
            "eventName": "config",
            "description": "Return camera config (aperture, shutter speed, serial number, ...)",
            "type": "all"
          }
        }
      },
      "verbose": true
    }
  },
  "nowindow": false,
  "streamAtStartup": true,
  "cameraNumber": "01",
  "camera": {
    "port": false,
    "devpath": false
  },
  "folder": {
    "output": "snaps",
    "stream": "/tmp/stream/"
  }
}

